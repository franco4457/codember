{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "space-before-function-paren": "off"
  },
  "overrides": [
    {
      "files": ["*.ts"],
      "rules": {
        "space-before-function-paren": "off"
      },
      "extends": ["eslint:recommended", "standard-with-typescript"]
    },
    {
      "files": ["*.js"],
      "rules": {
        "space-before-function-paren": "off"
      },
      "extends": ["eslint:recommended", "standard"]
    }
  ]
}
